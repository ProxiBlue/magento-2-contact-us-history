 * @author Vitaliy Boyko <vitaliyboyko@i.ua>
 */
-->
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">contactus_note_form.contactus_note_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Note Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <dataScope>data</dataScope>
        <namespace>contactus_note_form</namespace>
        <deps>
            <dep>contactus_note_form.contactus_note_form_data_source</dep>
        </deps>
        <buttons>
            <button name="back">
                <url path="*/index/index"/>
                <class>back</class>
                <label translate="true">Back</label>
            </button>
            <button name="save" class="VitaliyBoyko\ContactUsHistory\Block\Adminhtml\Note\View\SaveButton"/>
            <button name="delete" class="VitaliyBoyko\ContactUsHistory\Block\Adminhtml\Note\View\DeleteButton"/>
        </buttons>
    </settings>
    <dataSource name="contactus_note_form_data_source" component="Magento_Ui/js/form/provider">
        <settings>
            <submitUrl path="contactus/note/save"/>
        </settings>
        <dataProvider class="VitaliyBoyko\ContactUsHistory\Ui\DataProvider\NoteDataProvider" name="contactus_note_form_data_source">
            <settings>
                <requestFieldName>note_id</requestFieldName>
                <primaryFieldName>note_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general" sortOrder="10">
        <settings>
            <label translate="true">Note</label>
            <collapsible>false</collapsible>
            <opened>true</opened>
            <dataScope>general</dataScope>
        </settings>
        <field name="note_id" formElement="hidden" sortOrder="20"/>
        <field name="contact_name" formElement="input" sortOrder="20">
            <settings>
                <disabled>true</disabled>
                <dataType>text</dataType>
                <label translate="true">Name</label>
            </settings>
        </field>
        <field name="email" formElement="input" sortOrder="30">
            <settings>
                <disabled>true</disabled>
                <dataType>text</dataType>
                <label translate="true">Name</label>
            </settings>
        </field>
        <field name="phone" formElement="input" sortOrder="35">
            <settings>
                <disabled>true</disabled>
                <dataType>text</dataType>
                <label translate="true">Telephone</label>
            </settings>
        </field>
        <field name="status" formElement="select" sortOrder="40">
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Is responded</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="number">1</item>
                                <item name="label" xsi:type="string" translate="true">Responded</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="number">0</item>
                                <item name="label" xsi:type="string" translate="true">Not Responded</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="message" formElement="textarea" sortOrder="50">
            <settings>
                <disabled>true</disabled>
                <dataType>text</dataType>
                <label translate="true">Note</label>
            </settings>
        </field>
        <container name="reply_button_container" component="Magento_Ui/js/form/components/group" sortOrder="150">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="formElement" xsi:type="string">container</item>
                    <item name="breakLine" xsi:type="boolean">false</item>
                    <item name="dataScope" xsi:type="string" />
                    <item name="label" xsi:type="string" />
                </item>
            </argument>
            <button name="reply_button_button" template="ui/form/components/button/container">
                <settings>
                    <title translate="true">Reply</title>
                    <dataScope />
                </settings>
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="formElement" xsi:type="string">container</item>
                        <item name="actions" xsi:type="array">
                            <item name="0" xsi:type="array">
                                <item name="targetName" xsi:type="string">contactus_note_form.contactus_note_form.reply_modal</item>
                                <item name="actionName" xsi:type="string">toggleModal</item>
                            </item>
                        </item>
                        <item name="additionalForGroup" xsi:type="boolean">true</item>
                        <item name="additionalClasses" xsi:type="string">admin__field-medium</item>
                    </item>
                </argument>
            </button>
        </container>
    </fieldset>
    <modal name="reply_modal" provider="false">
        <insertForm name="reply_form">
            <settings>
                <autoRender>true</autoRender>
                <renderUrl path="mui/index/render_handle">
                    <param name="handle">contactus_note_reply</param>
                    <param name="buttons">1</param>
                </renderUrl>
                <formSubmitType>false</formSubmitType>
                <loading>false</loading>
                <ns>contactus_reply_form</ns>
                <toolbarContainer>${ $.parentName }</toolbarContainer>
                <externalProvider>contactus_note_form.contactus_note_form_data_source</externalProvider>
                <dataLinks>
                    <imports>false</imports>
                    <exports>true</exports>
                </dataLinks>
                <imports>
                    <link name="note_id">${ $.provider }:data.note_id</link>
                </imports>
                <exports>
                    <link name="note_id">${ $.provider }:data.note_id</link>
                </exports>
            </settings>
        </insertForm>
    </modal>
</form>
